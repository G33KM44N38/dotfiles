{
	"permissions": {
		"allow": [
			"Bash",
			"pnpm"
		]
	},
	"hooks": {
		"Notification": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "ai_success.sh"
					}
				]
			}
		],
		"Stop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "ai_success.sh"
					}
				]
			}
		],
		"PreToolUse": [
			{
				"matcher": "Write|Edit|Bash",
				"hooks": [
					{
						"type": "command",
						"command": "ai_tool_use.sh"
					}
				]
			}
		]
	}
}

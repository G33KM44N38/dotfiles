{
	"$schema": "https://opencode.ai/config.json",
	"provider": {},
	"agent": {
		"meta-agent": {
			"disable": true
		},
		"meta-command": {
			"disable": true
		},
		"build": {
			"prompt": "{file:./command/work.md}",
			"mode": "primary",
			"model": "opencode/grok-code",
			"tools": {
				"write": true,
				"edit": true,
				"bash": true
			}
		},
		"plan": {
			"mode": "primary",
			"model": "opencode/grok-code",
			"tools": {
				"write": false,
				"edit": false,
				"bash": false
			}
		}
	}
}

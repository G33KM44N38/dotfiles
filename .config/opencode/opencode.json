{
	"$schema": "https://opencode.ai/config.json",
	"provider": {},
	"model": "opencode/kimi-free",
	"mcp": {
		"figma_desktop": {
			"type": "remote",
			"url": "http://127.0.0.1:3845/mcp"
		}
	},
	"permission": {
		"external_directory": {
			"/tmp/*": "allow"
		}
	},
	"agent": {
		"meta-agent": {
			"disable": true
		},
		"meta-command": {
			"disable": true
		},
		"build": {
			"mode": "primary",
			"prompt": "{file:./command/agents.md}",
			"tools": {
				"write": true,
				"edit": true,
				"bash": true
			}
		},
		"plan": {
			"mode": "primary",
			"prompt": "{file:./command/agents.md}",
			"tools": {
				"write": false,
				"edit": false,
				"bash": false
			}
		}
	}
}

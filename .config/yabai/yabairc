# default layout (can be bsp, stack or float)
yabai -m config layout bsp

# New window spawns to the right if vertical split, or bottom if horizontal split
yabai -m config window_placement second_child

# padding set to 1px
yabai -m config top_padding 2
yabai -m config bottom_padding 2
yabai -m config left_padding 2
yabai -m config right_padding 2
yabai -m config window_gap 2

# center mouse on window with focus
yabai -m config mouse_follows_focus on

# modifier for clicking and dragging with mouse
yabai -m config mouse_modifier alt
# set modifier + left-click drag to move window
yabai -m config mouse_action1 move
# set modifier + right-click drag to resize window
yabai -m config mouse_action2 resize


# when window is dropped in center of another window, swap them (on edges it will split it)
yabai -m mouse_drop_action swap

yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^System preferences$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Karabiner-Elements$" manage=off
yabai -m rule --add app="^Numi$" manage=off

# Send apps to specific spaces
yabai -m rule --add app=Arc space=1
yabai -m rule --add app=Safari space=1
yabai -m rule --add app="^Arc$" title="" manage=off
yabai -m rule --add app=iTerm space=2
yabai -m rule --add app=Cursor space=2
yabai -m rule --add app=Simulator space=2
yabai -m rule --add app=Notion space=3
yabai -m rule --add app="Obsidian" space=3
yabai -m rule --add app="Reader" space=3
yabai -m rule --add app=Calendar space=3
yabai -m rule --add app=DBeaver space=4
yabai -m rule --add app=WhatsApp space=5
yabai -m rule --add app=Beeper space=5
yabai -m rule --add app=Discord space=5
yabai -m rule --add app=Mail space=5
yabai -m rule --add app=Messages space=5
yabai -m rule --add app=Marta space=6
yabai -m rule --add app=Music space=8
yabai -m rule --add app=Figma space=7
yabai -m rule --add app=Podcasts space=8
yabai -m rule --add app="^Docker Desktop$" space=9

yabai -m space 2 --label code

yabai -m config --space code   layout       bsp
yabai -m config --space code   split_ratio  0.73
